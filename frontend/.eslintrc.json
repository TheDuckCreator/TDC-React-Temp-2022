{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "es6": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "requireConfigFile": false,
    "ecmaVersion": 12,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "rules": {
    "linebreak-style": "off",
    "no-console": "off",
    "semi": "off",
    "react/jsx-filename-extension": "off"
  }
}
